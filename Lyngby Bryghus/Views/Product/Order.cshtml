@using Newtonsoft.Json.Linq
@model JObject
@{
    int num = 0;
    if (Session["role"] != null)
    {
        int.TryParse(Session["role"].ToString(), out num);

    }
    bool Editor = (num >= 10);
    ViewBag.Title = "Bestilling";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div id="order-view" class="container-fluid">
    <div class="row flex-row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 padding0 img-cut">
            <img src="~/Images/ContentImage/order1.svg" class="img-responsive" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center">
            <div class="textbox">
                @Html.Raw(Model["Pages"]["/Product/Order"]["Title"])
                @if (Editor)
                {
                    <a data-jPath="['Pages']['/Product/Order']['Title']" data-target=".Order-title" data-Title="Overskrift" class="Edit btn btn-edit" title="Rediger"><i class="fa fa-pencil-square-o"></i></a>
                }
                </div>
            <div class="textbox">
                @Html.Raw(Model["Pages"]["/Product/Order"]["Info"])

                @if (Editor)
                {
                    <a data-jPath="['Pages']['/Product/Order']['Info']" data-target=".Order-info" data-Title="Brødtekst" class="Edit btn btn-edit" title="Rediger"><i class="fa fa-pencil-square-o"></i></a>
                }
                </div>
                <a href="/Home/Contact/" class="btn btn-custom">KONTAKT</a>
            </div>
    </div>
    <div class="row color flex-row">
        <div class="hidden-lg hidden-md col-sm-12 col-xs-12 padding0 img-cut">
            <img src="~/Images/ContentImage/order2.jpg" class="img-responsive" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center centered">
            <div class="textbox">
                @Html.Raw(Model["Pages"]["/Product/Order"]["Subscription"]["Title"])
                @if (Editor)
            {
                    <a data-jPath="['Pages']['/Product/Order']['Subscription']['Title']" data-target=".Order-SubscriptionTitle" data-Title="Overskrift" class="Edit btn btn-edit" title="Rediger"><i class="fa fa-pencil-square-o"></i></a>
                }
                </div>
            <div class="textbox">
                @Html.Raw(Model["Pages"]["/Product/Order"]["Subscription"]["Info"])
                @if (Editor)
            {
                    <a data-jPath="['Pages']['/Product/Order']['Subscription']['Info']" data-target=".Order-Info" data-Title="Brødtekst" class="Edit btn btn-edit" title="Rediger"><i class="fa fa-pencil-square-o"></i></a>
                }
                </div>
                <a href="/Product/Subscription/" class="btn btn-custom">KØB ABONNEMENT</a>
            </div>
        <div class="col-lg-6 col-md-6 hidden-sm hidden-xs padding0 img-cut">
            <img src="~/Images/ContentImage/order2.jpg" class="img-responsive" />
        </div>
    </div>
    <div class="row flex-row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 padding0 img-cut">
            <img src="~/Images/ContentImage/order3.jpg" class="img-responsive" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center centered">
            <div class="textbox">
                @Html.Raw(Model["Pages"]["/Product/Order"]["Package"]["Title"])
                @if (Editor)
            {
                    <a data-jPath="['Pages']['/Product/Order']['Package']['Title']" data-target=".Package-title" class="Edit btn btn-edit" title="Rediger"><i class="fa fa-pencil-square-o"></i></a>
                }
                </div>
            <div class="textbox">
                @Html.Raw(Model["Pages"]["/Product/Order"]["Package"]["Info"])
                @if (Editor)
            {
                    <a data-jPath="['Pages']['/Product/Order']['Package']['Info']" data-target=".Package-info" class="Edit btn btn-edit" title="Rediger"><i class="fa fa-pencil-square-o"></i></a>
                }
                </div>
                <a href="/Product/Package/" class="btn btn-custom">SEND GAVE</a>
            </div>
    </div>
</div>

