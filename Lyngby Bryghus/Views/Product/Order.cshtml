@using Newtonsoft.Json.Linq
@model JObject
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div id="order-view" class="container-fluid">
    <div class="row row-eq-height">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 padding0">
            <img src="~/Images/ContentImage/order1.svg" class="img-responsive" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center">
            @Html.Raw(Model["Pages"]["/Product/Order"]["Title"])
            <a data-jPath="['Pages']['/Product/Order']['Title']" data-target=".Order-title" class="Edit btn btn-edit"><span class="glyphicon glyphicon-edit"></span> Rediger</a>
            @Html.Raw(Model["Pages"]["/Product/Order"]["Info"])
            <a data-jPath="['Pages']['/Product/Order']['Info']" data-target=".Order-info" class="Edit btn btn-edit"><span class="glyphicon glyphicon-edit"></span> Rediger</a>
            <br />
            <a href="/Home/Contact/" class="btn btn-custom">Kontakt</a>
        </div>
    </div>
    <div class="row color row-eq-height">
        <div class="hidden-lg hidden-md col-sm-12 col-xs-12 padding0">
            <img src="~/Images/ContentImage/order2.jpg" class="img-responsive" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center">
            @Html.Raw(Model["Pages"]["/Product/Order"]["Subscription"]["Title"])
            <a data-jPath="['Pages']['/Product/Order']['Subscription']['Title']" data-target=".Order-SubscriptionTitle" class="Edit btn btn-edit"><span class="glyphicon glyphicon-edit"></span> Rediger</a>
            @Html.Raw(Model["Pages"]["/Product/Order"]["Subscription"]["Info"])
            <a data-jPath="['Pages']['/Product/Order']['Subscription']['Info']" data-target=".Order-Info" class="Edit btn btn-edit"><span class="glyphicon glyphicon-edit"></span> Rediger</a>
            <br />
            <a href="/Product/Subscription/" class="btn btn-custom">Køb abonnement</a>
        </div>
        <div class="col-lg-6 col-md-6 hidden-sm hidden-xs padding0">
            <img src="~/Images/ContentImage/order2.jpg" class="img-responsive" />
        </div>
    </div>
    <div class="row row-eq-height">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 padding0">
            <img src="~/Images/ContentImage/order3.jpg" class="img-responsive" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center">
            @Html.Raw(Model["Pages"]["/Product/Order"]["Package"]["Title"])
            <a data-jPath="['Pages']['/Product/Order']['Package']['Title']" data-target=".Package-title" class="Edit btn btn-edit"><span class="glyphicon glyphicon-edit"></span> Rediger</a>
            @Html.Raw(Model["Pages"]["/Product/Order"]["Package"]["Info"])
            <a data-jPath="['Pages']['/Product/Order']['Package']['Info']" data-target=".Package-info" class="Edit btn btn-edit"><span class="glyphicon glyphicon-edit"></span> Rediger</a>
            <br/>
            <a href="/Product/Package/" class="btn btn-custom">Gå til bestilling</a>
        </div>
    </div>
</div>

