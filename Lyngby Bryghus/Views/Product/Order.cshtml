@using Newtonsoft.Json.Linq
@model JObject
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div id="order-view" class="container-fluid">
    <div class="row row-eq-height">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 padding0">
            <img src="~/Images/ContentImage/order1.svg" class="img-responsive" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center">
            <h2 class="Order-title">@Html.Raw(Model["Pages"]["/Product/Order"]["Title"])</h2>
            <a data-jPath="['Pages']['/Product/Order']['Title']" data-target=".Order-title" class="Edit">Rediger</a>
            <p class="paddingB20 Order-info">
                @Html.Raw(Model["Pages"]["/Product/Order"]["Info"])
            </p>
            <a data-jPath="['Pages']['/Product/Order']['Info']" data-target=".Order-info" class="Edit">Rediger</a>
            <a href="/Home/Contact/" class="btn btn-custom">Kontakt</a>
        </div>
    </div>
    <div class="row color row-eq-height">
        <div class="hidden-lg hidden-md col-sm-12 col-xs-12 padding0">
            <img src="~/Images/ContentImage/order2.jpg" class="img-responsive" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center">
            <h2 class="Order-SubscriptionTitle">@Html.Raw(Model["Pages"]["/Product/Order"]["Subscription"]["Title"])</h2>
            <a data-jPath="['Pages']['/Product/Order'][''Subscription']['Title']" data-target=".Order-SubscriptionTitle" class="Edit">Rediger</a>
            <p class="paddingB20">
                @Html.Raw(Model["Pages"]["/Product/Order"]["Subscription"]["Info"])
            </p>
            <a data-jPath="['Pages']['/Product/Order'][''Subscription']['Title']" data-target=".Order-SubscriptionTitle" class="Edit">Rediger</a>
            <a href="/Product/Subscription/" class="btn btn-custom">Køb abonnement</a>
        </div>
        <div class="col-lg-6 col-md-6 hidden-sm hidden-xs padding0">
            <img src="~/Images/ContentImage/order2.jpg" class="img-responsive" />
        </div>
    </div>
    <div class="row row-eq-height">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 padding0">
            <img src="~/Images/ContentImage/order3.jpg" class="img-responsive" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center">
            <h2>Send en gavepakke</h2>
            <p class="paddingB20">
                Overrask et familiemedlem eller ven, ved at bestille en af denne
                <br/>måneds pakkeløsninger.
            </p>
            <a href="/Product/Package/" class="btn btn-custom">Gå til bestilling</a>
        </div>
    </div>
</div>

