@using Repos.Models
@using Lyngby_Bryghus.ViewModels
@model PackageView
@{
    int num = 0;
    if (Session["role"] != null)
    {
        int.TryParse(Session["role"].ToString(), out num);

    }
    bool Editor = (num >= 10);
    ViewBag.Title = "Send en gave";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="container" id="package-view">
    <div class="row paddingT20">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
            <div class="textbox">
                @Html.Raw(Model.json["Pages"]["/Product/Package"]["Title"])
                @if (Editor)
            {
                    <a data-jPath="['Pages']['/Product/Package']['Title']" data-target=".Package-title" data-Title="Overskrift" class="Edit btn btn-edit" title="Rediger"><i class="fa fa-pencil-square-o"></i></a>
                }
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 paddingT20">
                <div class="textbox">
                    @Html.Raw(Model.json["Pages"]["/Product/Package"]["Info"])
                    @if (Editor)
            {
                        <a data-jPath="['Pages']['/Product/Package']['Info']" data-target=".Package-info" data-Title="Brødtekst" class="Edit btn btn-edit" title="Rediger"><i class="fa fa-pencil-square-o"></i></a>
                    }
                </div>
            </div>
        </div>
        <div class="row paddingT20">
            @foreach (Package package in Model.Packages)
            {
                <a href="#" class="col-lg-4 col-md-4  col-sm-offset-0 col-sm-4 col-xs-offset-1 col-xs-10 paddingB20" data-toggle="modal" data-target="#myModalPackage">
                    <figure>
                        <img src="~/Images/1.jpg" class="img-responsive" />
                        <figcaption><p>@package.Description</p></figcaption>

                    </figure>
                    <p class="text-center">@package.Name</p>
                </a>
            }
        </div>
    </div>



    <div class="modal fade" id="myModalPackage" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Kage</h4>
                </div>
                <div class="modal-body">
                    <p>Hej med dig!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-custom" data-dismiss="modal">Luk</button>
                </div>
            </div>

        </div>
    </div>

