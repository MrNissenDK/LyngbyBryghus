@using Repos.Models
@using Lyngby_Bryghus.ViewModels
@model PackageView
@{
            ViewBag.Title = "Package";
            Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="container" id="package-view">
    <div class="row paddingT20">
        @Html.Raw(Model.json["Pages"]["/Product/Package"]["Title"])<br/>
        <a data-jPath="['Pages']['/Product/Package']['Title']" data-target=".Package-title" data-Title="Pakke Overskrift" class="Edit btn btn-edit"><span class="glyphicon glyphicon-edit"></span> Rediger</a>
        @Html.Raw(Model.json["Pages"]["/Product/Package"]["Info"])
        <a data-jPath="['Pages']['/Product/Package']['Info']" data-target=".Package-info" data-Title="Pakke Info" class="Edit btn btn-edit"><span class="glyphicon glyphicon-edit"></span> Rediger</a>
        </div>
    <div class="row">
        @foreach (Package package in Model.Packages)
        {
            <a href="#" class="col-lg-4 col-md-4  col-sm-offset-0 col-sm-4 col-xs-offset-1 col-xs-10 paddingB20" data-toggle="modal" data-target="#myModalPackage">
                <figure>
                    <img src="~/Images/1.jpg" class="img-responsive"/>
                    <figcaption>@package.Description</figcaption>
                    
                </figure>
                <p class="text-center">@package.Name</p>
            </a>
        }
    </div>
</div>



<div class="modal fade" id="myModalPackage" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Kage</h4>
            </div>
            <div class="modal-body">
                <p>Hej med dig!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-custom" data-dismiss="modal">Luk</button>
            </div>
        </div>

    </div>
</div>

